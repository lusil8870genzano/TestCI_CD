pipeline { 
    agent {
        label 'master'
    }
    tools {
        maven 'Maven 3.8.5'
        jdk 'JDK 1.8'
    }  
    stages { 
	stage ('Initialize') {
	    steps {
                echo "PATH = ${PATH}"
                echo "M2_HOME = ${M2_HOME}"
		echo "Running ${env.BUILD_ID} on ${env.JENKINS_URL}"
            }
        }
        stage('Build') { 
	    steps { 
               	echo 'Build all modules with maven and build docker image...'
		dir('C:/TUTORIALS/JENKINS/EXAMPLES/TestCI_CD.git/spmia-chapter3-master/licensing-service') { // or absolute path
      			bat 'mvn clean install docker:build'
    		}
		dir('C:/TUTORIALS/JENKINS/EXAMPLES/TestCI_CD.git/spmia-chapter3-master/configurationserver') { // or absolute path
      			bat 'mvn clean install docker:build'
    		}		 
            }
        }
	stage('Deploy') {
		when {
			expression {
				currentBuild.result == null || currentBuild.result == 'SUCCESS'
			}
		}		
		steps {
			echo "effettua il deploy con docker"
		}
	}
    }
}