pipeline { 
    agent any
    tools {
        maven 'Maven 3.8.5'
        jdk 'JDK 1.8'
    }  
    stages { 
	stage ('Initialize') {
            steps {
                echo "PATH = ${PATH}"
                echo "M2_HOME = ${M2_HOME}"
            }
        }
        stage('Build') { 
            steps { 
               	echo 'Build all modules with maven...'
		sh 'mvn -f C:\TUTORIALS\JENKINS\EXAMPLES\TestCI_CD.git\spmia-chapter3-master clean install' 
            }
        }
    }
}